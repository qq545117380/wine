            $(".zcgm").on("click", function () {
                var curr = $(this);       
                ifrmLogin.login(function () {
                    layer.confirm("您确认再次购买订单内商品？", {
                        btn: ["确定", "取消"]
                    },
                   function () {

                     
                       $.ajax({
                           url: that.urlPath + "/BuyAgain",
                           type: 'POST',
                           dataType: 'json',
                           async: false,  // 此处必须定义为同步
                           data: { id: curr.data("id") },
